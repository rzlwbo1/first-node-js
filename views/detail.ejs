<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <title><%= resep.judulResep %></title>
</head>
<body>

  <main>
    <div class="container p-5">
      <div class="row">
        <div class="col-sm-10">
          <!-- Destruture biar gampang -->
          <% const {id, judulResep, deskripsi, slug, bahans} = resep; %>
          <h1><%= judulResep %></h1>
          <div class="row content">
            <div class="col">
              <p><%= deskripsi %></p>
              <hr>
              <h3>Bahan - bahan</h3>
              <ul>
              <% for (const bahan of bahans) { %>
                <li><%= bahan %></li>
              <% } %>
              </ul>
            </div>
          </div>
        </div>

        <div class="col-sm-auto d-flex flex-column">
          <a href="/detail/<%= resep.slug %>/<%= resep.id %>/edit" class="btn btn-warning">Edit resep</a>
         <form action="/delete/<%=resep.id%>?_method=DELETE" method="post">
          <button type="submit" class="btn btn-danger mt-3">Hapus Resep</button>
         </form>
        </div>
      </div>
    </div>
  </main>
  

  <script>
  
  </script>
</body>
</html>